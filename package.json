{
  "name": "pubsub-replay",
  "version": "1.0.2",
  "description": "Useful for when you need to replay the last sent event on a Pubsub network. Based on `pubsub-js`",
  "main": "out/index.js",
  "scripts": {
    "test": "jest --ci --silent",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublish": "tsc"
  },
  "keywords": [],
  "author": "Juan Camilo Guar√≠n P",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "@types/pubsub-js": "^1.5.18",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.3.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "microcache": "^1.0.0",
    "pubsub-js": "^1.5.7"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "mapCoverage": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/out"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owsas/pubsub-replay.git"
  },
  "bugs": {
    "url": "https://github.com/owsas/pubsub-replay/issues"
  },
  "homepage": "https://github.com/owsas/pubsub-replay#readme"
}
