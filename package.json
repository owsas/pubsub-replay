{
  "name": "pubsub-replay",
  "version": "1.0.3",
  "description": "Useful for when you need to replay the last sent event on a Pubsub network. Based on `pubsub-js`",
  "main": "out/index.js",
  "scripts": {
    "test": "jest --ci --silent",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublish": "tsc"
  },
  "keywords": [],
  "author": "Juan Camilo Guar√≠n P",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "22.2.3",
    "@types/pubsub-js": "1.5.18",
    "jest": "24.0.0",
    "ts-jest": "21.2.4",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.0",
    "typescript": "2.9.2"
  },
  "dependencies": {
    "microcache": "^1.0.0",
    "pubsub-js": "^1.7.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "mapCoverage": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/out"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owsas/pubsub-replay.git"
  },
  "bugs": {
    "url": "https://github.com/owsas/pubsub-replay/issues"
  },
  "homepage": "https://github.com/owsas/pubsub-replay#readme"
}
